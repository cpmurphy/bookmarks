<%= form_with(model: [Current.user, bookmark],
              url: bookmark.new_record? ? user_bookmarks_path(Current.user.username) : user_bookmark_path(Current.user.username, bookmark),
              data: { turbo: false }) do |form| %>
  <%= form.hidden_field :popup, value: params[:popup] %>

  <% if bookmark.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(bookmark.errors.count, "error") %> prevented this bookmark from being saved:</h2>

      <ul>
        <% bookmark.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :url, style: "display: block" %>
    <%= form.text_field :url %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :tags, style: "display: block" %>
    <%= form.text_field :tags %>
  </div>

  <div>
    <%= form.label :is_private, "Private", style: "display: block" %>
    <%= form.check_box :is_private %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
